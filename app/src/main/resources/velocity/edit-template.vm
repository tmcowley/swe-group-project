#parse("/velocity/head.vm")
#@mainLayout()
<header>
    <div id="headerLeft">
        Resmodus
    </div>
    <div id="headerRight">
        login stuff goes here
    </div>
</header>
<div id="mainFormSection">
    <div id="mainForm">
        <form action="" method="post">
            <div id="feedbackFormMain">
                <div class="feedbackElement">
                    <input class="formInput" type="text" placeholder="Enter Text">
                    <textarea id="feedbackData" name="feedbackData" placeholder="Feedback goes here."></textarea>
                </div>
                <button class="feedbackDelButton">del</button>
                <div class="feedbackElementFooter">
                    <input type="checkbox" id="consider1" name="consider1" value="Consider">
                    <label for="consider1">
                        Consider in sentiment</label><br>
                    <label for="rating1">Rating (1-5):</label>
                    <input type="number" id="rating1" name="rating1" min="1" max="5"><br>
                </div>
                <div class="feedbackElement">
                    <input class="formInput" type="text" placeholder="Enter Text">
                    <!-- the images are radio buttons -->
                    <div class="feelingRadioContainer">
                        <div class="feelingRadio">
                            <input type="radio" id="happy" name="feeling" value="happy">
                            <div class="feelingRadioImg happy"></div>
                        </div>
                        <div class="feelingRadio">
                            <input type="radio" id="ok" name="feeling" value="ok">
                            <div class="feelingRadioImg ok"></div>
                        </div>
                        <div class="feelingRadio">
                            <input type="radio" id="sad" name="feeling" value="sad">
                            <div class="feelingRadioImg sad"></div>
                        </div>
                    </div>
                </div>
                <button class="feedbackDelButton">del</button>
                <div class="feedbackElementFooter">
                    <input type="checkbox" id="consider2" name="consider2" value="Consider">
